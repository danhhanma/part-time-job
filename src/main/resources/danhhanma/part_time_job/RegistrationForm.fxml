<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="registrationPane" maxHeight="600.0" maxWidth="500" style="-fx-background-color: white; -fx-background-radius: 5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="danhhanma.part_time_job.register.RegistrationController">
    <children>
        <VBox alignment="TOP_CENTER" prefWidth="500.0" spacing="15" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <StackPane>
                    <children>
                        <Label text="Đăng ký">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Button fx:id="closeButton" onAction="#handleCloseButton" style="-fx-background-color: transparent;" text="✕" StackPane.alignment="CENTER_RIGHT" />
                    </children>
                </StackPane>

                <Label prefHeight="18.0" prefWidth="458.0" text="Họ và tên">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
                <TextField fx:id="nameField" prefHeight="35.0">
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin></TextField>

                <Label prefHeight="18.0" prefWidth="455.0" text="Email" />
                <TextField fx:id="emailField" prefHeight="35">
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin></TextField>

                <Label prefHeight="18.0" prefWidth="457.0" text="Chọn vai trò" />
                <ComboBox fx:id="roleComboBox" prefHeight="35" prefWidth="5000">
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin></ComboBox>

                <Label prefWidth="454.0" text="Mật khẩu" />
                <PasswordField fx:id="passwordField" prefHeight="35">
               <VBox.margin>
                  <Insets top="-10.0" />
               </VBox.margin></PasswordField>

                <Label prefWidth="458.0" text="Nhập lại mật khẩu" />
                <PasswordField fx:id="confirmPasswordField" prefHeight="35">
               <VBox.margin>
                  <Insets bottom="20.0" top="-10.0" />
               </VBox.margin></PasswordField>

                <Button fx:id="registerButton" onAction="#handleRegisterButton" prefHeight="40" prefWidth="5000" style="-fx-background-color: #6F7CFF; -fx-text-fill: white;" styleClass="button-all" stylesheets="@../../css/style.css" text="Đăng ký" />

                <!-- Trong phần đăng ký -->
                <HBox alignment="CENTER" spacing="5">
                    <children>
                        <Label text="Bạn đã có tài khoản?" />
                        <Hyperlink fx:id="loginLink" focusTraversable="false" onAction="#handleLoginLink" stylesheets="@../../css/style.css" text="Đăng nhập ngay!" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
